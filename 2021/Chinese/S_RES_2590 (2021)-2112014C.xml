      <p xml:space="preserve">
        <docTitle refersTo="#adoption">
          <docDate date="2021-08-30" refersTo="#adoptionDate">2021年8月30日</docDate>安全理事会<inline name="adoptionMeeting" title="8844">8844次会议通过</inline></docTitle>
