      <p xml:space="preserve">
        <docTitle refersTo="#adoption">Adopted by the Security Council at its <inline name="adoptionMeeting" title="9492nd">9492nd meeting</inline>, on<docDate date="2023-12-01" refersTo="#adoptionDate">1 December 2023</docDate></docTitle>
