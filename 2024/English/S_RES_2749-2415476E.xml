      <p xml:space="preserve">
        <docTitle refersTo="#resolutionNumber">		Resolution 2749 (2024)</docTitle>
      </p>
      <p xml:space="preserve">
        <docTitle refersTo="#adoption">Adopted by the Security Council at its <inline name="adoptionMeeting" title="9712th">9712th meeting</inline>, on<docDate date="2024-08-28" refersTo="#adoptionDate">28 August 2024</docDate></docTitle>
