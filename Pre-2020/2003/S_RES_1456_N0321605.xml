    <mainBody>
      <paragraph eId="para_2" class="SingleTxt">
        <content eId="para_2__content">
          <p xml:space="preserve">	<span class="italic">Decides</span> to adopt the attached declaration on the issue of combating terrorism.</p>
        </content>
      </paragraph>
