      <p xml:space="preserve">
        <docTitle refersTo="#adoption">Adopted by the Security Council at its <inline name="adoptionMeeting" title="5500th">5500th meeting</inline>, on<docDate date="2006-07-31" refersTo="#adoptionDate">31 July 2006</docDate></docTitle>
