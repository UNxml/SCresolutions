      <p xml:space="preserve">
        <docTitle refersTo="#adoption">Adopted by the Security Council at its <inline name="adoptionMeeting" title="7565th">7565th meeting</inline>, on<docDate date="2015-11-20" refersTo="#adoptionDate">20 November 2015</docDate></docTitle>
